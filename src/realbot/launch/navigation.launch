<launch>
    
    <!--Args, Params & Includes-->
    <arg name="model"/>
    <arg name="gui" default="False"/>
    <param name="use_gui" value="$(arg gui)"/>
    <param name="robot_description" textfile="$(find realbot)/urdf/realbot_processed.urdf"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find realbot)/world/little-room-world.world"/>
        <arg name="use_sim_time" value="true"/>
    </include>
    
    <!--Run Joint State Publisher (Send Fake Joint Values)-->
    <node name="joint_state_publisher" pkg="joint_state_publisher" 
        type="joint_state_publisher"/>


    <!--Run Robot State Publisher-->
    <node name="robot_state_publisher" pkg="robot_state_publisher" 
        type="robot_state_publisher" output="screen">
        <param name="publish_frequency" type="double" value="50.0"/>
    </node>

    <!--Run Gazebo-->
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model"
        args="-urdf -param robot_description -model my_robot_name -z 0.25"/>

    <!--Run RViz-->
    <!--node name="rviz" pkg="rviz" type="rviz" args="-d $(find urdf_tutorial)/urdf.vcg"/-->
    <node name="rviz" pkg="rviz" type="rviz"/>

    <!--Run the Map Server-->
    <node name="map_sevrer" pkg="map_server" type="map_server" 
        args="$(find realbot)/maps/first_map.yaml"/>

    <!--Run Move_Base-->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base">
        
        <rosparam file="$(find realbot)/config/costmap_common_params.yaml"
            command="load" ns="global_costmap"/>

        <rosparam file="$(find realbot)/config/costmap_common_params.yaml"
            command="load" ns="local_costmap"/>

        <rosparam file="$(find realbot)/config/local_costmap_params.yaml"
            command="load"/>

        <rosparam file="$(find realbot)/config/global_costmap_params.yaml"
            command="load"/>

        <rosparam file="$(find realbot)/config/base_local_planner_params.yaml"
            command="load"/>
    </node>

    <!--Run AMCL-->
    <arg name="use_map_topic" default="true"/>
    <arg name="scan_topic" default="/rrbot/laser/scan"/>

    <node pkg="amcl" type="amcl" name="amcl" output="screen">
        
        <param name="use_map_topic" value="$(arg use_map_topic)"/>
        <remap from="scan" to="$(arg scan_topic)"/>
        
        <!--Publish scans from best pose at a max of 10 Hz-->
        <param name="odom_model_type" value="diff"/>
        <param name="odom_alpha5" value="0.1"/>
        <param name="gui_publish_rate" value="10.0"/>
        <param name="laser_max_beams" value="60"/>
        <param name="laser_min_range" value="-1.0"/>
        <param name="laser_max_range" value="12"/>
        <param name="min_particles" value="500"/>
        <param name="max_particles" value="2000"/>
        <!--Maximum error between the true distribution and the estimated distribution-->
        <param name="kld_err" value="0.05"/>
        <param name="kld_z" value="0.99"/>
        <param name="odom_alpha1" value="0.2"/>
        <param name="odom_alpha2" value="0.2"/>
        <!--Translation std dev. m-->
        <param name="odom_alpha3" value="0.2"/>
        <param name="odom_alpha4" value="0.2"/>
        <param name="laser_z_hit" value="0.5"/>
        <param name="laser_z_short" value="0.05"/>
        <param name="laser_z_max" value="0.05"/>
        <param name="laser_z_rand" value="0.5"/>
        <param name="laser_sigma_hit" value="0.2"/>
        <param name="laser_lambda_short" value="0.1"/>
        <param name="laser_model_type" value="likelihood_field"/>
        <!-- <param name="laser_model_type" value="beam"/> -->
        <param name="laser_likelihood_max_dist" value="2.0"/>
        <param name="update_min_d" value="0.25"/>
        <param name="update_min_a" value="0.2"/>
        <param name="odom_frame_id" value="odom"/>
        <param name="resample_interval" value="1"/>

        <param name="transform_tolerance" value="0.1"/>
        <param name="recovery_alpha_slow" value="0.0"/>
        <param name="recovery_alpha_fast" value="0.0"/>
     
    </node>
    
</launch>